{
  "name": "graphql-typescript-server",
  "version": "0.0.1",
  "description": "Awesome project developed with TypeORM.",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.1",
    "@types/jest": "^23.1.1",
    "@types/node": "^10.3.4",
    "@types/uuid": "^3.4.3",
    "@types/yup": "^0.24.7",
    "gql2ts": "^1.8.0",
    "jest": "^23.1.0",
    "start-server-and-test": "^1.4.1",
    "ts-jest": "^22.4.6",
    "ts-node": "6.1.1",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "2.9.2",
    "yup": "^0.25.1"
  },
  "dependencies": {
    "@gql2ts/from-schema": "^1.8.0",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/ioredis": "^3.2.9",
    "@types/node-fetch": "^2.1.1",
    "@types/sparkpost": "^2.1.4",
    "bcryptjs": "^2.4.3",
    "cross-env": "^5.2.0",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "graphql": "^0.13.2",
    "graphql-import": "^0.6.0",
    "graphql-request": "^1.6.0",
    "graphql-tools": "^3.0.2",
    "graphql-yoga": "^1.14.8",
    "ioredis": "^3.2.2",
    "node-fetch": "^2.1.2",
    "nodemon": "^1.17.5",
    "pg": "^7.4.3",
    "reflect-metadata": "^0.1.12",
    "sparkpost": "^2.1.2",
    "typeorm": "0.2.7",
    "uuid": "^3.2.1"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon --exec ts-node src/index.ts",
    "test-server": "cross-env NODE_ENV=test ts-node src/index.ts",
    "test": "cross-env NODE_ENV=test jest --watch",
    "ci": "start-server-and-test test-server http://localhost:4000 test",
    "gen-schema-types": "ts-node src/scripts/createTypes.ts"
  },
  "jest": {
    "globalSetup": "./src/testSetup/callSetup.js",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
